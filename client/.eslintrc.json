{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {

        "quotes": ["error", "single"],
    // we want to force semicolons
         "semi": ["error", "always"],
    // we use 2 spaces to indent our code
         "indent": ["error", 2],
    // we want to avoid extraneous spaces
         "no-multi-spaces": ["error"]
    }
}
